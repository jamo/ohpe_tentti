<h1>Listing answers</h1>

<table>
  <tr>
    <th>Nick</th>
    <th>Email</th>
    <th>Other</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.nick %></td>
    <td><%= answer.email %></td>
    <td><%= answer.other %></td>
    <td><%= link_to 'Show', answer_path(answer.key) %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer.key) %></td>
    <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

